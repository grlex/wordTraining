{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        .vertical-center-block-wrapper{

            position: absolute;
            display: block;
            height: 100%;
            width: 100%;
        }
        .vertical-center-block-wrapper::before{
            height: 100%;
            display:inline-block;
            content: '';
            vertical-align: middle;
        }
        .vertical-center-block{
            display: inline-block;
            width: 100%;
            vertical-align: middle;
            text-align: center;
        }
    </style>
{% endblock %}

{% block body %}
    {% spaceless %}
        <div class="vertical-center-block-wrapper">
            <div class="vertical-center-block">
                <div class="container">
                    {% block content %}{% endblock %}
                </div>
            </div>
        </div>
    {% endspaceless %}
{% endblock  %}