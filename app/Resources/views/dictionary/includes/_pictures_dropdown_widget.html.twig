<div class="widget word-pictures-widget dropdown-widget {{ value|length > 0 ? 'avail' }}">
    <div  class="show-dropdown fa fa-image">
        <div class="dropdown-panel">
            <ul class="list-unstyled">
                {% for picture in value if picture.chosen %}
                    <li class="inline-block">
                        <img src="{{ vich_uploader_asset(picture, 'file') }}"
                             title="{{ picture.title }}"/>
                    </li>
                {% else %}
                    <li>{{ 'notification.list_empty'|trans }}</li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>