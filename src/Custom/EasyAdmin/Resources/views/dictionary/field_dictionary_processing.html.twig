

<div class="dictionary-processing-widget" id="dictionary-{{ item.id }}"
        data-dictionary-id="{{ item.id }}"
        data-status="{{ value.status }}"
        data-processed="{{ value.processed }}"
        data-total="{{ value.total }}">
    <div class="progress">
        <div class="progress-bar progress-bar-striped" style="width: 0;">
        </div>
    </div>
    <div class="status">
        <span class="processed">{{ value.processed}}</span> / <span class="total">{{ value.total}}</span>
        <span class="icon processing fa fa-spinner"></span>
        <span class="icon done fa fa-check"></span>
        <span class="result done">
            {{ 'dictionary_processing.done'|trans }}
        </span>
        <span class="result processing">
            {{ 'dictionary_processing.processing'|trans }}
            <a href="#" class="pause"><span class="fa fa-pause"></span></a>
        </span>
        <span class="result paused">
            {{ 'dictionary_processing.paused'|trans }}
            <a href="#" class="resume"><span class="fa fa-play"></span></a>
        </span>
    </div>

</div>
